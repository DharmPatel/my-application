<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="General">

        <SwitchPreference
            android:title="Auto Upload"
            android:defaultValue="false"
            android:key="auto_upload"
            android:summary="Upload the data"/>

        <ListPreference
            android:title="Sync Frequency"
            android:dialogTitle="Select One:"
            android:entries="@array/listArray"
            android:key="sync_frequency"
            android:summary="%s"
            android:defaultValue="1"
            android:entryValues="@array/listArrayValue"/>

        <ListPreference
            android:title="Scan Type"
            android:dialogTitle="Select One:"
            android:entries="@array/Scantype_Array"
            android:key="scan_type"
            android:summary="%s"
            android:defaultValue="1"
            android:entryValues="@array/Scantype_Value"
           />

    </PreferenceCategory>

    <PreferenceCategory android:title="Notifications">

        <SwitchPreference
            android:title="Show Notifications"
            android:defaultValue="false"
            android:key="notification" />

        <ListPreference
            android:title="Task Reminder"
            android:dialogTitle="Select One:"
            android:entries="@array/listArray1"
            android:key="Task_Reminder"
            android:summary="%s"
            android:defaultValue="1"
            android:entryValues="@array/listArrayValue1"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="About">

        <Preference
            android:title="Check for Update"
            android:key="update"/>

        <Preference
            android:title="Version"
            android:key="version"
            android:summary="1.0"/>

    </PreferenceCategory>

</PreferenceScreen>