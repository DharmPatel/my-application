<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.google.csmia_temp.AssetsStatus">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:weightSum="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:layout_weight="0.20"
                android:layout_height="wrap_content"
                android:text="Asset Name: "/>
            <TextView
                android:id="@+id/tvAssetName"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="0.80" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:layout_weight="0.20"
                android:layout_height="wrap_content"
                android:text="Asset Code: "/>

            <TextView
                android:id="@+id/tvAssetCode"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_weight="0.80"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:layout_weight="0.20"
                android:layout_height="wrap_content"
                android:text="Select Date-Time "/>

            <EditText
                android:id="@+id/etTime"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_weight="0.80"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="1"
        android:layout_height="wrap_content"
        android:id="@+id/AssetStatus">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:text="Asset Status "/>

        <!--  <Spinner
              android:id="@+id/spinnerAssetStatus"
              android:layout_width="245dp"
              android:background="@drawable/file1"
              android:layout_height="wrap_content"
              android:text=""
  android:visibility="invisible"
              />-->
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioStatusGroup"
            android:orientation="vertical">


        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:onClick="displayForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#337ab7"
        android:textColor="#F0FBFB"
        android:background="@drawable/file1"
        android:text="Generate Ticket"/>

</LinearLayout>
