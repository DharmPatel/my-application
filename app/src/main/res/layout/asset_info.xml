        <!-- changes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="0.25">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_main"
                android:textStyle="bold"
                android:text="Working"
                android:textSize="10dp"/>

            <Button
                android:layout_marginLeft="20dp"
                android:layout_width="157dp"
                android:background="#82E0AA"
                android:layout_height="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_main"
                android:textStyle="bold"
                android:text="Pending"
                android:textSize="10dp"/>

            <Button
                android:layout_marginLeft="20dp"
                android:layout_width="157dp"
                android:background="#F9E79F"
                android:layout_height="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_main"
                android:textStyle="bold"
                android:text="Maintainance"
                android:textSize="10dp"/>

            <Button
                android:layout_marginLeft="20dp"
                android:layout_width="157dp"
                android:background="#85C1E9"
                android:layout_height="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_main"
                android:textStyle="bold"
                android:text="Not Working"
                android:textSize="10dp"/>

            <Button
                android:layout_marginLeft="20dp"
                android:layout_width="157dp"
                android:background="#D98880"
                android:layout_height="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="05dp"
            android:paddingBottom="05dp"
            android:paddingLeft="05dp"
            android:paddingRight="05dp"
            android:weightSum="1"
            android:background="#D5D8DC"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_main"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textSize="14dp"
                android:text="Assets" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageView
                android:paddingTop="20dp"
                android:layout_width="154dp"
                android:layout_height="281dp"
                android:src="@drawable/assetpic"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />
        </LinearLayout>


