<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvTime"
            android:text=" [TVTIME]"
            android:textSize="12dp"
            android:layout_gravity="top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="3"
            >
        </TextView>

        <TextView
            android:id="@+id/tvAssetName"
            android:text=" [tvAssetName]"
            android:textSize="12dp"
            android:layout_gravity="top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="4"
            >
        </TextView>

        <TextView
            android:id="@+id/tvActivity_name"
            android:text=" [tvActivity_name]"
            android:textSize="12dp"
            android:layout_gravity="top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="3"
            >
        </TextView>

        <TextView
            android:layout_weight="0"
            android:id="@+id/tvAssetCode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            >
        </TextView>
        <TextView
            android:layout_weight="0"
            android:id="@+id/tvAsset_Id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            >
        </TextView>
        <TextView
            android:layout_weight="0"
            android:id="@+id/tvUpdateStatus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            >
        </TextView>
        <!-- <TextView
             android:id="@+id/tvAssetLocation"
             android:text=""
             android:textColor="#337ab7"
             android:layout_width="0dp"
             android:textSize="12dp"
             android:padding="14sp"
             android:layout_height="wrap_content"
             android:layout_gravity="top"
             android:layout_weight="7"
             android:textStyle="bold"
             >
         </TextView>-->



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="10">
        <TextView
            android:id="@+id/graceDuration2"
            android:text=" [Unplanned]"
            android:textSize="12dp"
            android:textColor="@color/bg_main"
            android:layout_gravity="top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="3"
            >
        </TextView>

        <TextView
            android:id="@+id/tvAssetLocation"
            android:text=" [Unplanned]"
            android:textSize="12dp"
            android:textColor="@color/bg_main"
            android:layout_gravity="top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="4"
            >
        </TextView>
        <TextView
            android:id="@+id/tvUserGroup"
            android:text="UserGroup"
            android:textSize="12dp"
            android:textColor="@color/bg_main"
            android:layout_gravity="top"
            android:layout_width="0dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="3"
            >
        </TextView>
        <!-- <TextView
             android:id="@+id/tvAssetLocation"
             android:text=""
             android:textColor="#337ab7"
             android:layout_width="0dp"
             android:textSize="12dp"
             android:padding="14sp"
             android:layout_height="wrap_content"
             android:layout_gravity="top"
             android:layout_weight="7"
             android:textStyle="bold"
             >
         </TextView>-->

        <TextView
            android:id="@+id/tvTaskType"
            android:text=" "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.35"
            android:textStyle="bold"
            >
        </TextView>

    </LinearLayout>
</LinearLayout>