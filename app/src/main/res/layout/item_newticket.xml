<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="@drawable/layout_border"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ticket_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" [ Ticket Code ]"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/input_register_hint"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:gravity="left|center"
                android:layout_weight=".7"
                android:layout_column="1"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" [ Status ]"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/input_register_hint"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_margin="2dp"
                android:gravity="left"
                android:layout_weight=".7"
                android:layout_column="1"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/location"/>
                <TextView
                    android:id="@+id/tv_loc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" [ Site Name ]"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/input_register_hint"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:gravity="left|center"
                    android:layout_weight=".7"
                    android:layout_column="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" [ Location Name ]"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/input_register_hint"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:gravity="left|center"
                    android:layout_weight=".7"
                    android:layout_column="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_problem_title"
                    android:layout_width="355dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=" [ Problem Title ]"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/input_register_hint"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="20dp"
        android:layout_margin="2dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:src="@drawable/calendarticket"/>
            <TextView
                android:id="@+id/tv_createdAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" [ Created At ]"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/input_register_hint"
                android:textSize="17dp"
                android:gravity="left"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_column="2"/>
    <TextView
        android:id="@+id/tvDeptNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" [ Dept Name ]"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/input_register_hint"
        android:textSize="15dp"

        android:layout_margin="2dp"
        android:gravity="right"
        android:layout_weight=".7"
        android:layout_column="1"/>

</LinearLayout>
</LinearLayout>
    </LinearLayout>
</LinearLayout>
